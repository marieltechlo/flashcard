<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flashcard_app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#a6c316"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:text="@string/question1"
        android:textSize="40sp"
        android:textColor="@color/red"
        android:background="@drawable/card_background"
        android:elevation="5sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="@string/barack_obama"
        android:background="@color/lime"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:gravity="center"
        android:visibility="invisible"/>



    <TextView
        android:id="@+id/flashcard_answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="@string/barack_obama"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:visibility="visible"
        android:layout_below="@id/flashcard_answer"/>

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="@string/bill_clinton"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:visibility="visible"
        android:layout_below="@id/flashcard_answer1"/>

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/george_bush"
        android:background="@color/yellow"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:gravity="center"
        android:visibility="visible"
        android:layout_below="@id/flashcard_answer2"/>

    <ImageView
        android:id="@+id/hide_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_answer3"
        android:layout_marginTop="244dp"
        app:srcCompat="@drawable/hide_icon"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/show_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_answer3"
        android:layout_marginTop="244dp"
        app:srcCompat="@drawable/show_icon"
        android:visibility="invisible"/>

</RelativeLayout>